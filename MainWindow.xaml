<Window x:Class="FELVETELI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FELVETELI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
   <Grid Background="#282C34">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid Grid.Row="0" Background="#3E4451" BorderBrush="#2C313A" BorderThickness="1" Foreground="White" Margin="10" SelectionChanged="DataGrid_SelectionChanged">
    
        </DataGrid>

        <Button x:Name="btnFelvetel" Content="Diák hozzáadása" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Background="DodgerBlue" Foreground="White" FontSize="16" FontWeight="Bold" Height="40" Width="120" Margin="10" Cursor="Hand">
           
        </Button>
    </Grid>
</Window>
